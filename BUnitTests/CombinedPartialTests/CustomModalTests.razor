@using Bunit
@using Xunit
@using BUnitDemoProject.Components
@using BUnitDemoProject.Pages
@inherits Bunit.TestContext
@code {
    
    [Fact]
    public void CustomModal_ShouldRenderAsExpected()
    {
        // Arrange
        var cut = Render(@<CustomModal Title="Test Modal" Body="Body Text">
                                            <a>Lorem Ipsum</a>
                                        </CustomModal>);
        // Assert
        cut.MarkupMatches(@<div class="modal" style="display: none; width: 300px; height: 500px;">
            <h1>Test Modal</h1>
            <p>Body Text</p>
            <a>Lorem Ipsum</a>
            <CustomButton ButtonCss="btn-primary"></CustomButton>
        </div>);
    }

    [Fact]
    public void CustomModal_ShouldContainCounter()
    {
         var cut = Render(@<CustomModal/>);
         Assert.True( cut.HasComponent<CustomButton>());
    }
}